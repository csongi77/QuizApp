<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Main Activity buttons -->
    <style name="main_activity_button">
        <item name="android:paddingRight">@dimen/activity_horizontal_default</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_default</item>
        <item name="android:textColor">@color/color_state_list</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <!-- Question style -->
    <style name="quiz_question_title" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginBottom">@dimen/question_title_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/question_title_margin_end</item>
        <item name="android:paddingRight">@dimen/question_title_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/question_title_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/question_title_padding_vertical</item>
        <item name="android:paddingTop">@dimen/question_title_padding_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Checkbox and Radio button style -->
    <style name="checkbox_answer_style" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:layout_marginTop">@dimen/checbox_answer_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/checbox_answer_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/checkbox_answer_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/checkbox_answer_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/checkbox_answer_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/checkbox_answer_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/checkbox_answer_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/checkbox_answer_padding_horizontal</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:background">@color/checkbox_light</item>
    </style>

    <!-- Edittext and Evaluation text root style -->
    <style name="edit_eval_text_style_root">
        <item name="android:layout_marginBottom">@dimen/edit_text_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_default</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_default</item>
        <item name="android:paddingTop">@dimen/edit_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/edit_text_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_default</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_default</item>
        <item name="android:background">@color/checkbox_light</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textColorHint">@color/color_text_white</item>
    </style>

    <!-- Edittext style -->
    <style name="edit_text_style" parent="edit_eval_text_style_root">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapWords</item>
    </style>

</resources>
