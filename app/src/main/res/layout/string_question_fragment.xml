<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/string_question_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusedByDefault="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/string_question_image_container"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_home_black_24dp" />


        <TextView
            android:id="@+id/string_question_text"
            android:layout_alignBottom="@id/string_question_image_container"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            tools:text="Test question about question" />
        </RelativeLayout>
        <EditText

            android:id="@+id/player_string_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="46dp"
            android:ellipsize="end"
            android:focusedByDefault="false"
            android:hint="@string/your_answer"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:lines="1"
            android:maxLines="1"
            android:paddingVertical="10dp" />
    </LinearLayout>
</ScrollView>