<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/radio_question_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/radio_question_image_container"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/radio_question_text"
                android:layout_alignBottom="@id/radio_question_image_container"
                style="@style/quiz_question_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Test question about question" />
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/radio_group_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_answer_option_0"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="10dp"
                tools:text="Radio button answer option 0" />

            <RadioButton
                android:id="@+id/radio_answer_option_1"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="10dp"
                tools:text="Radio button answer option 1" />

            <RadioButton
                android:id="@+id/radio_answer_option_2"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="10dp"
                tools:text="Radio button answer option 2" />

            <RadioButton
                android:id="@+id/radio_answer_option_3"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="46dp"
                android:layout_marginHorizontal="16dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="10dp"
                tools:text="Radio button answer option 3" />
        </RadioGroup>
    </LinearLayout>
</ScrollView>